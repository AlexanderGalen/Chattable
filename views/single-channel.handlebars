{{#each singleChannel.Messages}}
    {{#ifEquals User.id ../userid  }}
        <div class="card text-bg-primary mb-3 right" style="max-width: 18rem;">
            <div class="card-header">{{User.username}}</div>
            <div class="card-body">
                <h5 class="card-title">{{body}}</h5>
            </div>
        </div>
    {{else}}
        <div class="card text-bg-success mb-3 left" style="max-width: 18rem;">
            <div class="card-header">{{User.username}}</div>
            <div class="card-body">
                <h5 class="card-title">{{body}}</h5>
            </div>
        </div>
    {{/ifEquals}}
{{/each}}



